extends ../layout.pug
 
block content
    h1 Enregistrer un bien
    if error
        .alert.alert-danger= error
 
        hr


    form(action='/admin/realty/form' method="post")
        fieldset 
            legend  Adresse du bien
            .input-group.mb-3
                label Vendeur
                .input-group-prepend
                        i.fa.fa-user
                input(type="text" class="form-control" placeholder="Nom de vendeur" name="realty[vendorName]")
            
            .input-group.mb-3
                label Adresse
                .input-group-prepend
                input(type="text" class="form-control" placeholder="Adresse du bien" name="realty[address]")
            .input-group.mb-3
                .input-group-prepend
                input(type="text" class="form-control" placeholder="Suite Adresse (facultatif)" name="realty[suiteAdress]")
           
            .input-group.mb-3
                label Code postal
                .input-group-prepend
                input(type="number" class="form-control" placeholder="Code Postal" name="realty[zip]") 

            .input-group.mb-3
                label Information complémentaires
                .input-group-prepend
                input(type="text" class="form-control" placeholder="Distance des transports en commun, commerces de proximités etc" name="realty[infoComp]")

        .row
            .col-2
                button.btn.btn-primary(type="submit") Enregistrer
